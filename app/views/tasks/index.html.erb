<h1>My Tasks</h1>
<% @tasks.each do |task| %>
  <%= form_for(task) do |f| %>
    <div class="form-group">
      <%= f.label :completed %>
      <%= f.check_box :completed {'this.form.submit();'}%>
    </div>
  <% end %>
<h2>
  <%= link_to task.title, task_path(task) %>
</h2>
<%= link_to "Delete", destroy_path(task),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
<% end %>






